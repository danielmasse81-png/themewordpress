{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "spacing": {
        "section": "clamp(2.5rem, 3vw, 4rem)",
        "stack": "clamp(1.25rem, 2vw, 2.25rem)"
      }
    },
    "color": {
      "palette": [
        { "slug": "navy", "name": "Navy", "color": "#0f1624" },
        { "slug": "blue", "name": "BetaFPV Blue", "color": "#00a5f5" },
        { "slug": "cyan", "name": "Cyan Glow", "color": "#4ee2ec" },
        { "slug": "slate", "name": "Slate", "color": "#1f2a3d" },
        { "slug": "silver", "name": "Silver", "color": "#e5f1fb" },
        { "slug": "white", "name": "White", "color": "#ffffff" }
      ],
      "gradients": [
        {
          "slug": "blue-glow",
          "name": "Blue Glow",
          "gradient": "linear-gradient(135deg, #00a5f5 0%, #4ee2ec 100%)"
        }
      ],
      "defaultPalette": false,
      "duotone": [
        {
          "slug": "neon",
          "name": "Neon",
          "colors": ["#00a5f5", "#0f1624"]
        }
      ]
    },
    "layout": {
      "contentSize": "760px",
      "wideSize": "1180px"
    },
    "spacing": {
      "blockGap": "1.5rem"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "name": "Inter",
          "slug": "inter",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontWeight": "300 700",
              "fontStyle": "normal",
              "src": ["https://fonts.gstatic.com/s/inter/v12/UcCO3Fwr0gYf2XjG.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "0.85rem", "name": "XS" },
        { "slug": "sm", "size": "0.95rem", "name": "S" },
        { "slug": "base", "size": "1.05rem", "name": "Base" },
        { "slug": "lg", "size": "1.2rem", "name": "L" },
        { "slug": "xl", "size": "1.4rem", "name": "XL" },
        { "slug": "2xl", "size": "1.8rem", "name": "2XL" },
        { "slug": "display", "size": "clamp(2.4rem, 4vw, 3.6rem)", "name": "Display" },
        { "slug": "mega", "size": "clamp(3rem, 6vw, 4.4rem)", "name": "Mega" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "#0f1624",
      "text": "#e5f1fb"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": { "text": "var(--wp--preset--color--blue)" },
        "typography": { "fontWeight": "600" }
      },
      "button": {
        "color": {
          "text": "#0f1624",
          "background": "var(--wp--preset--gradient--blue-glow)"
        },
        "typography": {
          "fontWeight": "700"
        },
        "border": {
          "radius": "999px"
        }
      }
    },
    "blocks": {
      "core/post-template": {
        "spacing": { "blockGap": "1.6rem" }
      },
      "core/group": {
        "spacing": { "padding": { "top": "0", "right": "1.25rem", "bottom": "0", "left": "1.25rem" } }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
